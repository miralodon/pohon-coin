<div id="recipeModal" class="modal">
    <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">&times;</span>
        <div id="modalBody"></div>
    </div>
</div>

<script>
    // DATA RESEP
    const recipes = [
        {
            title: "Roti Awan Manis ‚òÅÔ∏è",
            image: "https://cdn-icons-png.flaticon.com/128/3165/3165642.png",
            ingredients: ["3 Putih telur", "30g Gula pasir", "10g Tepung maizena", "Pewarna makanan pink"],
            steps: [
                "Kocok putih telur sampai berbusa.",
                "Masukkan gula dan maizena, kocok sampai kaku (stiff peak).",
                "Bentuk bulat seperti awan di atas loyang.",
                "Panggang di suhu 150¬∞C selama 25 menit. Selesai!"
            ]
        },
        {
            title: "Omelet Kucing Ceria üê±",
            image: "https://cdn-icons-png.flaticon.com/128/3448/3448099.png",
            ingredients: ["2 Telur", "Garam & Merica", "Sosis untuk telinga", "Nori untuk mata"],
            steps: [
                "Kocok telur dan goreng di teflon bulat.",
                "Lipat dua telur hingga rapi.",
                "Potong sosis jadi segitiga untuk telinga.",
                "Hias mata dan kumis pakai nori. Meow!"
            ]
        },
        {
            title: "Susu Strawberry Pink üçì",
            image: "https://cdn-icons-png.flaticon.com/128/2674/2674505.png",
            ingredients: ["5 Buah Strawberry", "2 sdm Gula", "200ml Susu cair"],
            steps: [
                "Hancurkan strawberry dan gula sampai jadi selai.",
                "Masukkan selai ke dasar gelas.",
                "Tuang susu cair dingin perlahan.",
                "Aduk pelan dan nikmati kesegarannya!"
            ]
        }
    ];

    // FUNGSI MENAMPILKAN LIST
    function displayRecipes(data) {
        const list = document.getElementById('recipeList');
        list.innerHTML = "";
        data.forEach((recipe, index) => {
            list.innerHTML += `
                <div class="recipe-card" onclick="openModal(${index})">
                    <img src="${recipe.image}" alt="food">
                    <div>
                        <strong style="font-size: 18px;">${recipe.title}</strong>
                        <p style="margin: 5px 0 0; font-size: 12px; color: #888;">Klik untuk lihat tutorial ‚ú®</p>
                    </div>
                </div>
            `;
        });
    }

    // FUNGSI SEARCH
    function filterRecipe() {
        const input = document.getElementById('searchInput').value.toLowerCase();
        const filtered = recipes.filter(r => r.title.toLowerCase().includes(input));
        displayRecipes(filtered);
    }

    // FUNGSI MODAL
    function openModal(index) {
        const recipe = recipes[index];
        const modalBody = document.getElementById('modalBody');
        modalBody.innerHTML = `
            <h2 style="color: var(--pink-bold)">${recipe.title}</h2>
            <hr border="0" height="1px" background="#eee">
            <h4>Bahan-bahan:</h4>
            <ul>${recipe.ingredients.map(ing => `<li>${ing}</li>`).join('')}</ul>
            <h4>Langkah-langkah:</h4>
            <ol>${recipe.steps.map(step => `<li>${step}</li>`).join('')}</ol>
            <button class="btn-masak" onclick="closeModal()">Aku Siap Masak! üéÄ</button>
        `;
        document.getElementById('recipeModal').style.display = 'flex';
    }

    function closeModal() {
        document.getElementById('recipeModal').style.display = 'none';
    }

    // Jalankan saat pertama buka
    displayRecipes(recipes);
</script>

</body>
